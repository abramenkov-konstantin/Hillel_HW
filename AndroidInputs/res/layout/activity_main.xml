<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mycalcnew3.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:focusable="false"
            android:id="@+id/editText" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="5"
            android:columnCount="4"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp">

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="@string/b7"
                android:id="@+id/button7"
                android:layout_row="0"
                android:layout_column="0"
                android:onClick="ClickBtn7"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="@string/b8"
                android:id="@+id/button8"
                android:layout_row="0"
                android:layout_column="1"
                android:onClick="ClickBtn8"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="@string/b9"
                android:id="@+id/button9"
                android:layout_row="0"
                android:layout_column="2"
                android:onClick="ClickBtn9"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="@string/bDiv"
                android:id="@+id/buttonDiv"
                android:layout_row="0"
                android:layout_column="3"
                android:onClick="ClickBtnDiv"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="@string/b4"
                android:id="@+id/button4"
                android:layout_row="1"
                android:layout_column="0"
                android:onClick="ClickBtn4"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="@string/b5"
                android:id="@+id/button5"
                android:layout_row="1"
                android:layout_column="1"
                android:onClick="ClickBtn5"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="@string/b6"
                android:id="@+id/button6"
                android:layout_row="1"
                android:layout_column="2"
                android:onClick="ClickBtn6"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="@string/bMul"
                android:id="@+id/buttonMul"
                android:layout_row="1"
                android:layout_column="3"
                android:onClick="ClickBtnMul"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="@string/b1"
                android:id="@+id/button1"
                android:layout_row="2"
                android:layout_column="0"
                android:onClick="ClickBtn1"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="@string/b2"
                android:id="@+id/button2"
                android:layout_row="2"
                android:layout_column="1"
                android:onClick="ClickBtn2"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="@string/b3"
                android:id="@+id/button3"
                android:layout_row="2"
                android:layout_column="2"
                android:onClick="ClickBtn3"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="@string/bMinus"
                android:id="@+id/buttonMinus"
                android:layout_row="2"
                android:layout_column="3"
                android:onClick="ClickBtnMinus"/>
            <Button
                android:layout_width="160dp"
                android:layout_height="80dp"
                android:text="@string/b0"
                android:id="@+id/button0"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:onClick="ClickBtn0"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="@string/bDot"
                android:id="@+id/buttonDot"
                android:layout_row="3"
                android:layout_column="2"
                android:onClick="ClickBtnDot"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="@string/bPlus"
                android:id="@+id/buttonPlus"
                android:layout_row="3"
                android:layout_column="3"
                android:onClick="ClickBtnPlus"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="@string/bClear"
                android:id="@+id/buttonClear"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:onClick="ClickBtnClear"/>
            <Button
                android:layout_width="242dp"
                android:layout_height="80dp"
                android:text="@string/bCalc"
                android:id="@+id/buttonCalc"
                android:layout_row="4"
                android:layout_column="1"
                android:layout_columnSpan="3"
                android:onClick="ClickBtnCalc"/>

        </GridLayout>
    </LinearLayout>
</RelativeLayout>
